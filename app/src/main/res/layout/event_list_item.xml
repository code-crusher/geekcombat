<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ads:cardCornerRadius="5dp"
    ads:cardUseCompatPadding="true"
    ads:contentPaddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_app"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:enabled="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_cntTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:singleLine="true"
                android:text="AdTItle"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_cntTitle"
                android:enabled="false"
                android:singleLine="true"
                android:text="AdDesc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:singleLine="true"
                android:text="Advertisement"
                android:textSize="13sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_desc"
                android:layout_marginTop="5dp"
                android:enabled="false"
                android:text="Install" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

